generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model GameScore {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  wpm      BigInt
}

model UserCredentials {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  password      String
  mailConfirmed Boolean @default(false)
}
